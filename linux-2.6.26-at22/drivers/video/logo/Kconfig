	depends on MACH_DECSTATION || ALPHA
	default y

config LOGO_MAC_CLUT224
	bool "224-color Macintosh Linux logo"
	depends on MAC
	default y

config LOGO_MX27ADS_CLUT224
	bool "224-color Freescale i.MX27ADS Linux logo"
	depends on MACH_MX27ADS
	default y

